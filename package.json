{
  "name": "do-tcp-node-pm2-nginx",
  "version": "1.0.0",
  "description": "Example TCP + PM2/nginx with nodejs",
  "main": "index.js",
  "resourceFiles": [
    "msgs/derp-60.txt",
    "msgs/derp-100.txt",
    "msgs/glhf.txt",
    "msgs/welcome.txt"
  ],
  "nexe": {
    "input": "dist/index.js",
    "output": "dist/test.nex",
    "resourceFiles": [
      "msgs/welcome.txt",
      "msgs/derp-60.txt"
    ],
    "browserify": {
      "excludes": [],
      "requires": []
    },
    "temp": "../src",
    "debug": true,
    "runtime": {
      "nodeConfigureOpts": [
        "--fully-static"
      ],
      "framework": "node",
      "version": "8.6.0"
    }
  },
  "scripts": {
    "ci": "npm run clean && npm run build && npm run compile && npm run compress",
    "start": "nodemon index.ts",
    "clean": "rm dist/*",
    "build": "tsc && terser dist/index.js > dist/index.min.js",
    "compile": "nexe -t 8.6.0 -i dist/index.js -o dist/f11 && du -sh dist/",
    "compress": "echo 'Compressing: dist/f11 -> dist/f11.xz' && xz -z -9 dist/f11 && du -sh dist/"
  },
  "repository": {
    "type": "git",
    "url": "git@github-snipe:f11snipe/do-tcp-node-pm2-nginx"
  },
  "keywords": [
    "node",
    "tcp",
    "nginx",
    "pm2"
  ],
  "author": "F11snipe",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.25",
    "nexe": "^4.0.0-beta.19",
    "nodemon": "^2.0.15",
    "terser": "^5.12.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "colors": "^1.4.0"
  }
}
